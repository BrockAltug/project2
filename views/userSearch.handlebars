<div class="container mt-5">
  <h2 class="text-center">Search for Users</h2>

  <!-- Search Form -->
  <form class="form search-form mt-4" method="GET" action="/search">
    <div class="form-group">
      <label for="username" class="font-weight-bold">Search by Username:</label>
      <input 
        type="text" 
        id="username" 
        name="username" 
        class="form-input" 
        placeholder="Enter a username" 
        required 
      />
    </div>
    <div class="form-group text-center">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <!-- Search Results -->
  <div class="search-results mt-5">
    {{#if users.length}}
      <h3>Results:</h3>
      <ul class="list-group">
        {{#each users}}
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <strong>{{username}}</strong> <br />
                <span class="text-muted">Email: {{email}}</span>
              </div>
              <a href="/profile/{{id}}" class="btn btn-sm btn-info">View Profile</a>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="text-center text-muted">No users found. Try another search!</p>
    {{/if}}
  </div>
</div>
