<div class="text-center">
  <h2>{{content}}</h2>
  <p>Posted by {{user.username}} on {{format_date created_at}}</p>
</div>

<div class="comments-section mt-4">
  <h3>Comments:</h3>

  {{#if comments.length}}
  <ul class="list-unstyled">
    {{#each comments as |comment|}}
    <li class="mb-3">
      <p><strong>{{comment.user.username}}:</strong> {{comment.comment}}</p>
      <p><small>Commented on {{format_date comment.created_at}}</small></p>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>No comments yet. Be the first to comment!</p>
  {{/if}}

  <form class="form new-comment-form mt-4">
    <div class="form-group">
      <label for="comment">Add a Comment:</label>
      <textarea class="form-input" id="comment" name="comment" rows="3"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit Comment</button>
    </div>
  </form>
</div>

<script src="./js/post.js"></script>