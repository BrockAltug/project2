<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!-- Link to the post details page -->
      <a href="/post/{{post.id}}">Post by {{post.user.username}}</a>
    </h2>
    <p>Posted on {{format_date post.created_at}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}