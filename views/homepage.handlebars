{{#if logged_in}}
  <h2 class="text-center mb-4">Recent Posts</h2>

  {{#if posts.length}}
    {{#each posts as |post|}}
      <div class="row post mb-4 p-3 border rounded shadow-sm">
        <div class="col-12">
          <div class="post-header d-flex align-items-center mb-3">
            <div class="mr-3">
              <h3 class="mb-0 font-weight-bold">{{post.user.username}}</h3>
              <p class="text-muted small mb-0">{{format_date post.created_at}}</p>
            </div>
          </div>
          <div class="post-content">
            <p class="mb-0">{{post.content}}</p>
            <button 
              class="like-btn btn btn-primary mt-2" 
              data-id="{{post.id}}" 
              data-logged-in="true"
            >
              Like ({{post.likes}})
            </button>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p class="text-muted text-center">No posts available. Be the first to post!</p>
  {{/if}}
{{else}}
  <div class="welcome-container">
    <h1>Welcome to YourSpace</h1>
    <p>YourSpace is a place to connect, share, and engage. Join us today!</p>
    <a href="/login" class="btn btn-primary mr-2">Login</a>
    <a href="/signup" class="btn btn-secondary">Sign Up</a>
  </div>
{{/if}}

<script src="/js/like.js"></script>

