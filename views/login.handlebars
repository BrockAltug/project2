<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="text-center">Login</h2>

    <form class="form login-form">
      <!-- Email Field -->
      <div class="form-group">
        <label for="email-login" class="font-weight-bold">Email:</label>
        <input 
          class="form-input" 
          type="email" 
          id="email-login" 
          name="email" 
          placeholder="Enter your email" 
          required 
        />
      </div>

      <!-- Password Field -->
      <div class="form-group">
        <label for="password-login" class="font-weight-bold">Password:</label>
        <input 
          class="form-input" 
          type="password" 
          id="password-login" 
          name="password" 
          placeholder="Enter your password" 
          required 
        />
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <button class="btn btn-primary w-100" type="submit">Login</button>
      </div>
    </form>

    <!-- Link to Signup -->
    <p class="mt-3 text-center">
      Don't have an account? <a href="/signup">Sign up here</a>.
    </p>
  </div>
</div>

<script src="/js/login.js"></script>