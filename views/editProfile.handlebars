<div class="container mt-5">
  <h2>Edit Your Profile</h2>
  <form class="form edit-profile-form" enctype="multipart/form-data">
    <!-- Username -->
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" id="username" name="username" class="form-input" value="{{username}}" required />
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="form-input" value="{{email}}" required />
    </div>

    <!-- Profile Picture -->
    <div class="form-group">
      <label for="profile-picture">Profile Picture</label>
      <input type="file" id="profile-picture" name="profile_picture" class="form-input" accept="image/*" />
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</div>

<script>
  document.querySelector('.edit-profile-form').addEventListener('submit', async (event) => {
    event.preventDefault();

    const formData = new FormData(event.target);

    try {
      const response = await fetch('/api/users/profile', {
        method: 'PUT',
        body: formData,
      });

      if (response.ok) {
        alert('Profile updated successfully!');
        window.location.replace('/profile');
      } else {
        const error = await response.json();
        alert(error.message || 'Failed to update profile.');
      }
    } catch (err) {
      console.error('Error updating profile:', err);
      alert('An unexpected error occurred.');
    }
  });
</script>
